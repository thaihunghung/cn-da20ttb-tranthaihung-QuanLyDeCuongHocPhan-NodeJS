                const sttCTC = chiTietRow ? cleanUpString(chiTietRow.textContent) : '';
                chuong.ChiTietChuong.push(sttCTC);
            });

            chuongData.push(chuong);
        });

        // In ra mảng chuongData để kiểm tra
        console.log(JSON.stringify(chuongData, null, 2));
